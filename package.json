{
    "name": "zoomswap-farm",
    "version": "0.1.0",
    "license": "MIT",
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "3.1.0",
        "@types/chai": "^4.2.18",
        "@types/lodash": "^4.14.170",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.2",
        "chai": "^4.3.4",
        "dotenv": "^10.0.0",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-json": "^2.1.2",
        "eslint-plugin-prettier": "^3.4.0",
        "ethereum-private-key-to-address": "0.0.7",
        "ethereum-waffle": "^3.3.0",
        "ethers": "^5.1.4",
        "hardhat": "^2.2.1",
        "hardhat-deploy": "^0.7.10",
        "hardhat-deploy-ethers": "^0.3.0-beta.8",
        "hardhat-typechain": "^0.3.5",
        "lodash": "^4.17.21",
        "prettier": "^2.3.0",
        "prettier-plugin-solidity": "^1.0.0-beta.9",
        "rimraf": "^3.0.2",
        "solhint": "^3.3.4",
        "solhint-plugin-prettier": "0.0.5",
        "solidity-coverage": "^0.7.16",
        "solidity-docgen": "^0.5.11",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "scripts": {
        "lint": "npm run lint:ts && npm run lint:sol",
        "lint:fix": "npm run lint:fix:ts && npm run lint:fix:sol",
        "lint:ts": "eslint --ext ts && prettier --list-different test/**/*.ts",
        "lint:fix:ts": "eslint --ext ts --fix && prettier --write test/**/*.ts",
        "lint:sol": "solhint 'contracts/**/*.sol'",
        "lint:fix:sol": "prettier --write 'contracts/**/*.sol' && solhint 'contracts/**/*.sol' --fix",
        "clean": "rimraf ./artifacts/ ./cache/",
        "precompile": "yarn clean",
        "compile": "hardhat compile",
        "pretest": "yarn compile",
        "test": "hardhat test",
        "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
        "test:gas": "cross-env REPORT_GAS=true yarn test",
        "prepublishOnly": "yarn test",
        "deploy:kovan": "hardhat --network kovan deploy",
        "deploy:iotex": "hardhat --network iotex deploy",
        "deploy:iotex_test": "hardhat --network iotex_test deploy"
    }
}
